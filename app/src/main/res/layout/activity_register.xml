<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register_CL_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue2"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:id="@+id/register_LL_regBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/light_blue1"
        android:orientation="vertical"
        android:padding="40px"
        app:layout_constraintBottom_toTopOf="@+id/register_LL_bottomSeperator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_CL_header">

        <EditText
            android:id="@+id/register_ET_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/roboto_regular"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textSize="20px" />


        <android.support.design.widget.TextInputLayout
            android:id="@+id/register_TI_Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/register_ET_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/roboto_regular"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textSize="20px" />
        </android.support.design.widget.TextInputLayout>

        <EditText
            android:id="@+id/register_ET_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:ems="10"
            android:fontFamily="@font/roboto_regular"
            android:hint="Name"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textSize="20px" />

        <EditText
            android:id="@+id/register_ET_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:ems="10"
            android:fontFamily="@font/roboto_regular"
            android:hint="Address"
            android:inputType="text"
            android:textColor="@color/black"
            android:textSize="20px" />

        <EditText
            android:id="@+id/register_ET_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:ems="10"
            android:fontFamily="@font/roboto_regular"
            android:hint="Phone"
            android:inputType="phone"
            android:textColor="@color/black"
            android:textSize="20px" />

        <TextView
            android:id="@+id/register_TV_dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center_horizontal"
            android:hint="Select birth date"
            android:textColor="@color/black"
            android:textSize="20px" />

    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/register_CL_header"
        android:layout_width="0dp"
        android:layout_height="50px"
        android:background="@color/light_blue2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/register_IB_back"
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_marginLeft="10px"
            android:background="@color/transparent"
            android:scaleType="fitXY"
            android:tint="@color/light_blue1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/left_arrow" />

        <TextView
            android:id="@+id/register_TV_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Register"
            android:textColor="@color/light_blue1"
            android:textSize="24px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/register_CL_signupWrap"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/light_blue1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/register_B_signup"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="Sign Up"
            android:textSize="18px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:id="@+id/register_LL_bottomSeperator"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="@color/text_shadow"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/register_CL_signupWrap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"></LinearLayout>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/register_CL_Loading"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#5E535353"
        android:clickable="true"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/register_IV_LoadingBar"
            android:layout_width="100px"
            android:layout_height="100px"
            android:background="@drawable/loading_anim"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/register_CL_Alert"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:padding="10px"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/register_CL_AlertBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white_transparent1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/register_TV_AlertTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:paddingTop="10px"
                android:paddingBottom="10px"
                android:text="Title"
                android:textColor="@color/black"
                android:textSize="24px"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/register_LL_AlertSeparator1"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:background="#82B1FF"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/register_TV_AlertTitle"></LinearLayout>

            <TextView
                android:id="@+id/register_TV_AlertMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:padding="20px"
                android:text="Alert Message"
                android:textColor="@color/black"
                android:textSize="20px"
                app:layout_constraintBottom_toTopOf="@+id/register_TV_AlertClose"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/register_LL_AlertSeparator1" />

            <TextView
                android:id="@+id/register_TV_AlertClose"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_marginBottom="10px"
                android:background="@color/light_blue2"
                android:fontFamily="@font/roboto_light"
                android:gravity="center"
                android:text="✕"
                android:textSize="20px"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>